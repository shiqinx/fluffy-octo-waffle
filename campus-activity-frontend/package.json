{
  "name": "campus-activity-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "基于地理位置的校园活动与组队平台",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host 0.0.0.0",
    "dev:port": "vite --port 3001",
    "build": "vite build",
    "build:test": "vite build --mode test",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:fast": "node scripts/fast-test.js test:run",
    "test:mock": "cross-env VITE_USE_MOCK=true vitest run",
    "test:file": "cross-env VITE_USE_MOCK=true vitest run",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "clean": "rm -rf node_modules dist",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "coordtransform": "^2.1.2",
    "dayjs": "^1.11.9",
    "leaflet": "^1.9.4",
    "pinia": "^2.1.7",
    "vant": "^4.6.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^10.1.0",
    "jsdom": "^27.2.0",
    "vite": "^4.4.9",
    "vitest": "^4.0.9"
  },
  "keywords": [
    "campus",
    "activity",
    "location",
    "team",
    "vue",
    "vite"
  ],
  "author": "Your Name",
  "license": "MIT"
}
